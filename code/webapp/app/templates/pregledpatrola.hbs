<button type="button" class="btn btn-primary btn-block dugmic">Dodaj novu patrolu</button>

<table class="table table-hover tabelica">
  <thead>
    <tr>
      <th>Vrijeme prijave</th>
      <th>Lokacija</th>
      <th>Vrsta kontrole</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |patrola|}}  
    <tr>
      <td>{{patrola.vrijeme_prijave}}</td>
      <td>{{patrola.lokacija.naziv}}</td>
      <td>{{patrola.vrsta_kontrole}}</td>
      <td><a href="#" class="btn btn-primary btn-sm" role="button">Pogledaj komentare</a></td>
      <td><input class="btn btn-primary btn-sm" type="submit" value="Odjavi patrolu"></td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{outlet}}
